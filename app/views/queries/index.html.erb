<p id="notice"><%= notice %></p>

<h1>Queries</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Answer</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.year %></td>
        <td><%= query.answer %></td>
        <td><%= query.category %></td>
      </tr>
    <% end %>
  </tbody>
  
  <thead>
    <tr>
      <th>Year</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counts.each do |key, count| %>
      <tr>
        <td><%= key %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

